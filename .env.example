# Environment Configuration
# Copy this file to .env and update the values as needed
# cp .env.example .env

# Application Environment
# Options: development, dev, production (default: production)
ENV=development

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=DISCOVERY_TASK_QUEUE

# gRPC Service Configuration
GRPC_SERVICE_ADDRESS=localhost:50051

# API Server Configuration
API_PORT=8080

# Docker Compose Environment Variables (for Temporal)
# These are used by docker-compose.yml
DB=postgresql
DB_PORT=5432
POSTGRES_USER=temporal
POSTGRES_PWD=temporal
POSTGRES_SEEDS=postgresql
POSTGRES_PASSWORD=temporal
POSTGRES_DB=temporal
